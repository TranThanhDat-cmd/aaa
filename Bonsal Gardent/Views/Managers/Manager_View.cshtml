@using Microsoft.AspNetCore.Http;

<style>
    #cell-container {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;
        width: 100%;
        position: relative;
        margin-top: 2em;
    }

    * {
        margin: 0;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    }

    #Account{
        background-image: url('/image/2022-10-26_232208.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: 0 50%;
    }

    #Product {
        background-image: url(/images/sat.png);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: 0 50%;
    }

    #Action {
        background-image: url(/images/sat.png);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: 0 50%;
    }

    .cell {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 3.5em;
        font-weight: bold;
        width: 30%;
        height: 300px;
        position: relative;
        text-shadow: 0.05em 0.05em 0.1em black;
        border-radius: 0.5em;
        text-align: center;
        margin-bottom: 1em;
    }

        .cell::before {
            content: '';
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            top: 0;
            background-color: rgba(0,0,0,0.5);
            border-radius: 0.2em;
        }

    body.dark a:visited {
        color: #c896ff;
    }

    body.dark a {
        color: #63b8ee;
    }

    .page-link {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        z-index: 10;
        cursor: pointer;
        text-decoration: none;
        color: white !important;
        padding: 0 0.5em;
    }

</style>
<body>
    <h2 style="text-align:center">Manager option:</h2>
    <div id="cell-container">

        @if (Context.Session.GetString("role") != null && Context.Session.GetString("role")!.ToString() == "Admin")
        {
            <div class="cell">
                <a id="Account" class="page-link" asp-area="" asp-controller="Managers" asp-action="Manager_Account">Manager Account</a>
            </div>
        }
        
        <div class="cell">
            <a id="Product" class="page-link" asp-area="" asp-controller="Managers" asp-action="Manager_Product">Manager Product</a>
        </div>

        @if (Context.Session.GetString("role") != null && Context.Session.GetString("role")!.ToString() == "Admin")
        {
            <div id="Action" class="cell">
                <a class="page-link" asp-area="" asp-controller="Managers" asp-action="Manager_Page">Manager Action Page</a>
            </div>
        }

        

    </div>
</body>

