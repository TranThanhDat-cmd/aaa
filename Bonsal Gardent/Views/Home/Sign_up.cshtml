                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <label for="psw-repeat"><b>Re_Password</b></label>
            <input type="password" placeholder="Enter Password" name="re-password" required>
            <div class="form-group">
                <label asp-for="Email" class="control-label"><b>Email</b></label>
                <input  asp-for="Email" class="form-control" placeholder="Enter Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"><b>Phone</b></label>
                <input asp-for="Phone" class="form-control" placeholder="Enter Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"><b>Address</b></label>
                <input asp-for="Address" class="form-control" placeholder="Enter Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
