    <h4>After you sign up then you can login for Shopping.</h4>
    <form action="@Url.Action("Register","Home")" method="post">

        <div style="text-align: center"><h2>Create your Account before Shopping cart.</h2></div>
        <div class="container">
            <div class="form-group">
                <label asp-for="Name" class="control-label"><b>Name</b></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Username" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"><b>Password</b></label>
