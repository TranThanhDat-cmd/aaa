@{
    @using Microsoft.AspNetCore.Http;
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Your Profile</h4>
    <hr />


    @if (Context.Session.GetString("role")!.ToString() == "Customer")
    {
        var customer = (Bonsal_Gardent.Models.AccCustomer)Model;

        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @customer.Name
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @customer.Email
            </dd>
            <dt class="col-sm-2">
                Phone
            </dt>
            <dd class="col-sm-10">
                @customer.Phone
            </dd>
            <dt class="col-sm-2">
                Address
            </dt>
            <dd class="col-sm-10">
                @customer.Address
            </dd>
        </dl>
        <a asp-controller="AccCustomers" asp-action="Edit_for_Customer" asp-route-id="@Context.Session.GetString("idUser")!.ToString()">Edit</a>
        <a asp-controller="AccCustomers" asp-action="Delete_for_Customer" asp-route-id="@Context.Session.GetString("idUser")!.ToString()">Delete</a>
        <div>
            --
        </div>
        <a asp-controller="Sell" asp-action="User_Bill">Your Bill</a>
        
    }
    else{
        var manager = (Bonsal_Gardent.Models.AccManager)Model;
        
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @manager.Name
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @manager.Email
            </dd>
            <dt class="col-sm-2">
                Phone
            </dt>
            <dd class="col-sm-10">
                @manager.Phone
            </dd>
            <dt class="col-sm-2">
                Address
            </dt>
            <dd class="col-sm-10">
                @manager.Address
            </dd>
        </dl>
         
    }
    
</div>





